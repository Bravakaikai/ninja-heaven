@model IEnumerable<NinjaHeaven.Models.UserEquipment>

@{ ViewData["Title"] = "Storage"; }

<h1 class="text-center">@ViewData["Title"]</h1>

<p class="text-center">
    <a asp-action="Shop"><i class="fa-solid fa-basket-shopping"></i> Go to Shop</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Equipment.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment.ImgUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedDate)
            </th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Equipment.Name)
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.Equipment.ImgUrl)" alt="@Html.DisplayFor(modelItem => item.Equipment.Name)" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Equipment.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                    </td>
                    <td>
                        <a asp-action="Sell" asp-route-id="@item.Equipment.Id">Sell</a>
                    </td>
                </tr>
            }
         }
    </tbody>
</table>

<style>
    .table {
        text-align: center;
    }

    img {
        max-width: 50px;
        height: 30px;
    }
</style>

